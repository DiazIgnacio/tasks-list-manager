{
  "version": "0.1.0",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "http://localhost:3000/:path*"
    }
  ],
  "env": {
    "API_URL": "/api"
  },
  "build": {
    "publish": ["server/dist/**/*", "client/dist/**/*"],
    "functions": {
      "src": "server/functions",
      "output": "server/dist/functions"
    }
  }
}
