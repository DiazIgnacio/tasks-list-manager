{
  "version": "0.2",
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "SKIP_PREFLIGHT_CHECK": "true"
    },
    "src": "client",
    "use": "@vercel/static-build",
    "config": {
      "maxLambdaSize": "50mb"
    }
  },
  "routes": [
    {
      "src": "/api/.*",
      "dest": "server/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/build/$1"
    }
  ]
}
