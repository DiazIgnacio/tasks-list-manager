{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@now/node-server"
    },
    {
      "src": "client/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "client/build" }
    }
  ],
  "routes": [
    { "src": "/api/.*", "dest": "server.js" },
    { "src": "/(.*)", "dest": "client/build/$1" }
  ]
}
