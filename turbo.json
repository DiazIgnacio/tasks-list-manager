{
  "version": "1",
  "engines": {
    "node": "14.x"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/app.js"
    },
    {
      "src": "(/.*)?",
      "dest": "client/build/$1"
    }
  ],
  "builds": {
    "server": {
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    "client": {
      "use": "@vercel/static-build",
      "inputs": ["client"]
    }
  }
}
